super + Return
    alacritty

super + Escape
    pkill -USR1 -x sxhkd

super + alt + {q,r}
    bspc {quit,wm -r}

alt + {_,shift + }F4
    bspc node -{c,k}

alt + space
    rofi -show combi -combi-modes "window,run" -modes combi -window-command "bspc node \{window\} -d focused"

super + {Left,Down,Up,Right}
    bspc node --swap {west,south,north,east}

super + ctrl + {Left,Down,Up,Right}
    bspc node -n {west,south,north,east}.!automatic

super + shift + {Left,Down,Up,Right}
    bspc node -z {left,bottom,top,right} 12

super + alt + {Left,Down,Up,Right}
    bspc node -p ~{west,south,north,east}

super + plus
    bspc monitor -a "$(rofi -dmenu)"

super + minus
    bspc desktop -r

super + bracket{left,right}
    bspc desktop -f {prev,next}.local

#alt + shift + space
#    rofi -show window -window-command "bspc node {window} -d focused"

super + r
    bspc node @/ -R 90

super + b
    bspc node @/ -B
